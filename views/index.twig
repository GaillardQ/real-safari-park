<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
    <head>
        <title>{{ title }}</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <meta name="304workaround" content="2013-10-24 21:17:23">
        <meta name="description" content="Un jeu grandeur nature de capture de Pokémon. Qui n'a pas rêvé d'avoir des pokemons à côté de chez soit ;)">
        <meta name="keywords" content="pokemon, map, safary-park, capture" />
        <meta http-equiv="content-language" content="fr" />
        <link rel="author" href="https://plus.google.com/u/0/1150298936075155600"/>
        <meta property="og:title" content="Real Safari Park : un jeu de capture de Pokémon grandeur nature"/>
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css"/>
        <link rel='stylesheet' href='/stylesheets/bootstrap-theme.min.css' />
        <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key={{ maps_key }}&sensor=true"></script>
        <script src="/javascripts/jquery-1.10.2.min.js"></script>
        <script src="/javascripts/bootstrap.min.js"></script>
        <script src="/javascripts/globals.js"></script>
        <script src="/javascripts/map.js"></script>
        <script src="/javascripts/index.js"></script>
        <script src="/socket.io/socket.io.js"></script>
    </head>
    
    <body onLoad="initIndex('{{app_id}}', '{{ host }}')">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <div>
                        <img class="navbar-brand" src="../images/loader-park.gif" alt="" id="park-loader" />
                        <a class="navbar-brand" href="../">Real Safari Park</a>
                    </div>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="menu-el"><a onClick="toggleHelp();return false;">Aide</a></li>
                        <li class="menu-el"><a onClick="toggleContactForm();return false;">Contact</a></li>
                        <li class="menu-el"><a onClick="toggleLegals();return false;">Mentions légales</a></li>
                        <li class="menu-el">
                            <a href="#" onClick="return false;">
                                <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" 
                                    data-auto-logout-link="true" scope="email, user_location, publish_actions">
                                </div>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <div id="player-photo" class="div-infos">
                                <img src="../images/loader-init-ui.png" alt="" class="no-padding" id="park-loader" />
                            </div>
                            <div id="player-infos" class="div-infos">Inconnu (0 balls)</div>
                        </li>
                     </ul>
                </div>
            </div>
        </nav>
        
        <!-- HELP POPUP -->
        <div class="row">
            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-2 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 popup"
            id="help-popup">
                <h3>Aide</h3>
                <br />
                <h6>iOS</h6>Réglages > Confidentialité > Service de localisation > Autoriser
                Safari
                <br />
                <br />
                <button type="button" class="btn btn-default right" onClick="toggleHelp();">Fermer</button>
            </div>
        </div>
        
        <!-- CONTACT POP-UP -->
        <div class="row">
            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-2 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 popup"
            id="contact-popup">
                <h3>Contact</h3>
                <div id="contact-required" class="space-under-20">* champs obligatoires</div>
                <div id="contact-error" class="alert alert-danger hidden" role="alert"></div>
                <div id="div-contact-email" class="form-group row space-under-20">
                    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-md-offset-1 col-lg-offset-2">
                        <label class="contact-label">E-mail* :</label>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6">
                        <input id="contact-email" name="contact-email" class="form-control" type="email" placeholder="Entrez votre e-mail"/>
                    </div>
                </div> 
                <div id="div-contact-subject" class="form-group row space-under-20">
                    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-md-offset-1 col-lg-offset-2">
                        <label class="contact-label">Sujet* :</label>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6">
                        <select id="contact-subject" name="contact-subject" class="form-control">
                            <option value="0" selected>Sélectionnez...</option>
                            <option value="Aide">Aide</option>
                            <option value="Suggestion">Suggestion</option>
                            <option value="Bug">Bug</option>
                            <option value="Autre">Autre</option>
                        </select>
                    </div>
                </div>
                <div id="div-contact-message" class="form-group row space-under-20">
                    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-md-offset-1 col-lg-offset-2">
                        <label class="contact-label">Message* :</label>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6">
                        <textarea id="contact-message" name="contact-subject" class="form-control" placeholder="Entrez votre message..."></textarea>
                    </div>
                </div>
                <button type="button" class="btn btn-default right" onClick="validContactForm();">Envoyer</button>
                <button type="button" class="btn btn-default right" onClick="toggleContactForm();">Fermer</button>
            </div>
        </div>
        
        <div class="row">
            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-2 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 popup"
            id="legals-popup">
                <h3>Mentions légales</h3>
                <button type="button" class="btn btn-default right" onClick="toggleLegals();">Fermer</button>
            </div>
        </div>
        
        <div id="logo" class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 col-xs-offset-0 col-sm-offset-2 col-md-offset-3 col-lg-offset-4"  id="loader-init-ui">
                <img src="../images/logo.png" alt="loading" class="img-responsive" />
            </div>
        </div>
        <div id="map">
            <div id="map-canvas" class="display-none"></div>
        </div>
        
